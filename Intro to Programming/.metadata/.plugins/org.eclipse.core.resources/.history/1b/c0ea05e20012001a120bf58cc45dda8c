package practice;
import java.util.Scanner;
public class reveerseDigitsWhile {

	public static void main(String[] args) {
		Scanner input= new Scanner(System.in);
		
		System.out.print("Enter a number:");
		
		if(input.hasNextInt()) {
			int number=input.nextInt();
			int digit=number;
			int reverse=0;
			while(digit>0) {
				digit+=digit%10;
				reverse=digit*10;
				
			}
			System.out.println("The reverse of "+number+" is "+(reverse/10));
		}
		

	}

}
